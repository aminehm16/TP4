#include <stdio.h>

int main() {
    int a, b, n;
    printf("Entrez trois entiers (a, b, n) : ");
    scanf("%d %d %d", &a, &b, &n);

    if (a % n == b % n) {
        printf("%d ≡ %d (mod %d) est vrai.\n", a, b, n);
    } else {
        printf("%d ≡ %d (mod %d) est faux.\n", a, b, n);
    }

    return 0;
}
